FROM openjdk:8
ENV SEATUNNEL_HOME="/opt/seatunnel"
ARG SEATUNNEL_VERSION
ARG SEATUNNEL_PATH
COPY seatunnel-dist/target/apache-seatunnel-${SEATUNNEL_VERSION}-bin.tar.gz /opt/apache-seatunnel-${SEATUNNEL_VERSION}-bin.tar.gz
WORKDIR /opt
RUN tar -xzvf apache-seatunnel-${SEATUNNEL_VERSION}-bin.tar.gz
RUN mv apache-seatunnel-${SEATUNNEL_VERSION} seatunnel
COPY seatunnel-shade/seatunnel-hadoop3-3.1.4-uber/target/seatunnel-hadoop3-3.1.4-uber.jar  /opt/seatunnel/lib/seatunnel-hadoop3-3.1.4-uber.jar
RUN rm -f /opt/apache-seatunnel-${SEATUNNEL_VERSION}-bin.tar.gz
WORKDIR /opt/seatunnel



